//processsing point burst

int w,h;
int sw = 10;
float z  = 0.0;

void setup() {
 size(400,400);
  w = 400;
  h = w;
  background(0);
  stroke(255);
  
}

void draw() {
  background(0);
  translate(w/2,h/2);
  strokeWeight(z);
  point(0,0);
  
  if (z > w/2) {
    stroke(random(255),random(255),random(255));
    z = 10;
  }
  z++;
}
